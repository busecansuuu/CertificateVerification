@model UserDTO
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row d-flex justify-content-between">
    <!-- Sidebar -->
    <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark text-white sidebar">
        <div class="d-flex flex-column vh-100">
            <ul class="nav flex-column flex-grow-1">
                <li class="nav-item mb-3">

                    <h5 class="text-center pt-3">ADMİN PANEL</h5>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link text-white" aria-current="page" asp-controller="AdminUser" asp-action="Index">
                        <i class="bi bi-people-fill"></i>
                        Kullanıcı Yönetimi
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="AdminCertificate" asp-action="Index">
                        <i class="bi bi-file-earmark-check-fill"></i>
                        Sertifika Yönetimi
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Login" asp-action="LogOut">
                        <i class="bi bi-file-earmark-check-fill"></i>
                        Çıkış Yap
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="col-md-9 col-lg-10">
        <!-- Kullanıcı Güncelleme Formu -->
        <div class="card mb-4">
            <div class="card-header">
                <h4 class="card-title">Kullanıcı Güncelle</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                        <label for="userName" class="form-label">Ad</label>
                        <input type="text" class="form-control" id="userName" asp-for="Name" placeholder="Ad Giriniz" required />
                    </div>
                    <div class="mb-3">
                        <label for="userSurname" class="form-label">Soyad</label>
                        <input type="text" class="form-control" id="userSurname" asp-for="Surname" placeholder="Soyad Giriniz" required />
                    </div>
                    <div class="mb-3">
                        <label for="userEmail" class="form-label">E-posta</label>
                        <input type="email" class="form-control" id="userEmail" asp-for="Email" placeholder="E-posta Giriniz" required />
                    </div>
                    <div class="mb-3">
                        <label for="userPhone" class="form-label">Telefon Numarası</label>
                        <input type="tel" class="form-control" id="userPhone" asp-for="PhoneNumber" placeholder="Telefon Numarası Giriniz" required />
                    </div>
                    <div class="mb-3">
                        <label for="userDepartment" class="form-label">Departman</label>
                        <input type="text" class="form-control" id="userDepartment" asp-for="Department" placeholder="Departman Giriniz" required />
                    </div>
                    <div class="mb-3">
                        <label for="userRole" class="form-label">Rol</label>
                        <input type="text" class="form-control" id="userRole" asp-for="Role" placeholder="Rol Giriniz" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>
