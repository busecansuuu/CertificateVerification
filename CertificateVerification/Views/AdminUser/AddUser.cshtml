@{
    ViewData["Title"] = "AddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row d-flex justify-content-between">
    <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark text-white sidebar">
        <div class="d-flex flex-column vh-100">
            <ul class="nav flex-column flex-grow-1">
                <li class="nav-item mb-3">

                    <h5 class="text-center pt-3">ADMİN PANEL</h5>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link text-white" aria-current="page" asp-controller="AdminUser" asp-action="Index">
                        <i class="bi bi-people-fill"></i>
                        Kullanıcı Yönetimi
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="AdminCertificate" asp-action="Index">
                        <i class="bi bi-file-earmark-check-fill"></i>
                        Sertifika Yönetimi
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Login" asp-action="LogOut">
                        <i class="bi bi-file-earmark-check-fill"></i>
                        Çıkış Yap
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="col-md-9 col-lg-10">

        <!-- Kullanıcı Ekleme Formu -->
        <div class="card mb-4">
            <div class="card-header">
                <h4 class="card-title">Kullanıcı Ekle</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Ad</label>
                        <input type="text" class="form-control" id="name" name="Name" placeholder="Adınızı girin" required />
                    </div>
                    <div class="mb-3">
                        <label for="surname" class="form-label">Soyad</label>
                        <input type="text" class="form-control" id="surname" name="Surname" placeholder="Soyadınızı girin" required />
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">E-posta</label>
                        <input type="email" class="form-control" id="email" name="Email" placeholder="E-posta adresinizi girin" required />
                    </div>
                    <div class="mb-3">
                        <label for="phoneNumber" class="form-label">Telefon Numarası</label>
                        <input type="tel" class="form-control" id="phoneNumber" name="PhoneNumber" placeholder="Telefon numaranızı girin" />
                    </div>
                    <div class="mb-3">
                        <label for="department" class="form-label">Departman</label>
                        <input type="text" class="form-control" id="department" name="Department" placeholder="Departmanınızı girin" />
                    </div>
                    <div class="mb-3">
                        <label for="role" class="form-label">Rol</label>
                        <input type="text" class="form-control" id="role" name="Role" placeholder="Rolünüzü girin" />
                    </div>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>